#!/bin/sh

set -e

path="$HOME/.macform"

xcode-select --install || true

if [ -e $path/.git ]; then
  cd $path && git pull
else
  git clone https://github.com/filippo-liverani/macform.git $path
fi

ln -sf $path/Brewfile ~/.Brewfile
sh $path/install

curl https://raw.github.com/filippoliverani/dotfiles/master/bootstrap -L -o - | sh
curl https://raw.github.com/filippoliverani/zshell/master/bootstrap -L -o - | sh
curl https://raw.github.com/filippoliverani/determinal/master/bootstrap -L -o - | sh
curl https://raw.github.com/filippoliverani/simsalavim/master/bootstrap -L -o - | sh
curl https://raw.github.com/filippoliverani/turbomux/master/bootstrap -L -o - | sh
